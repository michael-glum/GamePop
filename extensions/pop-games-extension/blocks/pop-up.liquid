<div id="popUp">
  <div class="left-column">
    <div id="headerContainer">
      <text id="headerText">Get 10%, 20%, or 30% Off Your First Order</text>
    </div>
    <div id="subheaderContainer">
      <text id="subheaderText">Win the game to discover your discount!</text>
    </div>
    <form id="emailForm">
      <label for="email">Enter your email to play:</label>
      <input type="email" id="email" name="email" placeholder="Your email">
      <button type="button" onclick="validateAndProcessEmail()">Submit</button>
      <text id="emailDenied">This email has already been used</text>
    </form>
    <div id="imageContainer">
      <img src="{{ 'CircleTickOutline.svg' | asset_url }}" alt="Circle Tick" id="circleTick">
    </div>
    <div id="discountPercentageContainer">
      <text id="discountPercentage">20% Off!</text>
    </div>
    <div id="discountContainer">
      <text id="discountText">Redeem code:</text>
    </div>
    <div id="discount-box"> 
      <text id="discountCode"></text>
      <img src="{{ 'ClipboardMinor.svg' | asset_url }}" alt="Clipboard" id="copyButton" onclick="copyTextToClipboard()">
      <img src="{{ 'CircleTickOutline.svg' | asset_url }}" alt="Circle Tick Small" id="circleTickSmall">
    </div>
    <div id="discount-terms">Single use per customer</div>
    <div id="email-terms">By submitting your email you agree to recieve email marketing updates for this store</div>
  </div>
  <div id="right-column">
    <div id="exitContainer" onclick="closePopUp()">
      <img src="{{ 'CancelMinor.svg' | asset_url }}" alt="Exit Button" id="exitButton">
      <img src="{{ 'CancelMinorHover.svg' | asset_url }}" alt="Exit Button" id="exitButtonHover">
    </div>
    <div id="gameContainer">
      <div id="lockContainer">
        <img src="{{ 'LockFilledMajor.svg' | asset_url }}" alt="Lock" id="lock" />
      </div>
      <div id="wordGameContainer">
        <img src="{{ 'wordgame.png' | asset_url }}" alt="Word Game" id="wordGameImg" />
        <div id="board"></div>
        <div id="answer">Guess a word</div>
        <div id="keyboard"></div>
      </div>
      <div id="birdGameContainer">
        <canvas id="bird-board" width:"360px" height="450px"></canvas>
        <img src="{{ 'flappybird.png' | asset_url }}" alt="Flappy Bird" id="birdImg" width="34px" height="24px">
        <img src="{{ 'toppipe.png' | asset_url }}" alt="Top Pipe" id="topPipeImg" width="64px" height="360px">
        <img src="{{ 'bottompipe.png' | asset_url }}" alt="Bottom Pipe" id="bottomPipeImg" width="64px" height="360px">
      </div>
      <div id="statsContainer">
        <p class="title">Your Stats</p>
        <div class="stats-column-container">
          <div class="column">
            <p>Score:</p>
            <p id="score">4</p>
          </div>
          <div class="column">
            <p>Avg:</p>
            <p id="avg">3</p>
          </div>
          <div class="column">
            <p>Best:</p>
            <p id="best">2</p>
          </div>
        </div>
        <p class="footer">Powered by PopGames</p>
      </div>
    </div>
  </div>
</div>

<style>
  .visually-hidden {
    position: absolute!important;
    overflow: hidden;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
    clip: rect(0 0 0 0);
    word-wrap: normal!important;
  }
  
  @-webkit-keyframes rainbow {
    0% {border-color: hsl(0, 100%, 50%);}
    14% {border-color: hsl(30,100%,50%);}
    28% {border-color: hsl(60,100%,50%);}
    42% {border-color: hsl(120,100%,50%);}
    56% {border-color:  hsl(240,100%,50%);}
    70% {border-color: hsl(280,100%,50%);}
    84% {border-color: hsl(320,100%,50%);}
    100% {border-color: hsl(255, 100%, 50%);}
  }

  @media (max-width: 768px) {
    #popUp {
      right: 0%;
      width: 100%;
      display: flex;
      flex-direction: column;
    }

    #headerContainer, #gameContainer, #emailForm {
      width: 100%;
    }

    button[is="party-button"]:hover {
      transform: scale(1.00);
    }
  }

  canvas:empty {
    display: initial;
  }
</style>

{% schema %}
{
  "name": "Word Game",
  "target": "body",
  "stylesheet": "word-game.css",
  "javascript": "word-game.js",
  "settings": []
}
{% endschema %}